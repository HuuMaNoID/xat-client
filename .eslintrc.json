{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never"
    }],
    "operator-linebreak": ["error", "before"]
  },
  "plugins": [
    "markdown"
  ]
}
